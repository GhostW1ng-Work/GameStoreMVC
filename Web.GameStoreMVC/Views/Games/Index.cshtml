@model Web.GameStoreMVC.Models.ViewModels.GameViewModel

@{
	ViewData["Title"] = "Главная";
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-6">
			@if (Model != null)
			{
				<div class="mg-5 p-5">
					<img src="@Model.ImageUrl"
						 alt="@Model.Name"
						 class="mb-2 d-block img-fluid" />

					<h2 class="mb-3">@Model.Name</h2>
					<p class="mb-3">
						@foreach (var genre in @Model.Genres)
						{
							<span class="badge bg-secondary px-3">@genre.Name</span>
						}
					</p>

					<p class="mb-3">
						Разработчик: @Model.Developer
					</p>

					<p class="mb-3">
						Платформы:
						@foreach (var platform in @Model.Platforms)
						{
							<span>@platform.Name</span>
						}
					</p>

					<p class="mb-3">
						Языки:
						@foreach (var language in @Model.Languages)
						{
							<span>@language.Name</span>
						}
					</p>

					<p class="mb-3">
						Год выпуска: @Model.YearOfRelease.ToShortDateString()
					</p>

					<div class="mb-3 ">
						@Html.Raw(@Model.Description)
					</div>

					<div class="mt-3">
						<a class="btn btn-primary"
						   asp-area=""
						   asp-controller="Games"
						   asp-action="Index"
						   asp-route-urlHandle="@Model.Id">Купить</a>

						<span>@Model.Price руб</span>
					</div>
				</div>
			}
		</div>
	</div>
</div>


