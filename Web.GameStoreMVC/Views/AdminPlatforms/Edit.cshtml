@model Web.GameStoreMVC.Models.ViewModels.EditPlatformRequest

<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>Редактировать платформу</h1>
	</div>
</div>

<div class="container py-5">
	@if (Model != null)
	{
		<form method="post">
			<div class="mb-3">
				<label class="form-label">Id</label>
				<input type="text" id="id" class="form-control" asp-for="Id" readonly />
			</div>

			<div class="mb-3">
				<label class="form-label">Название</label>
				<input type="text" id="name" class="form-control" asp-for="Name" />
			</div>

			<div class="mb-3">
				<button type="submit" class="btn btn-dark">Применить</button>

				<button type="submit" class="btn btn-danger"
						asp-area=""
						asp-controller="AdminPlatforms"
						asp-action="Delete">
					Удалить
				</button>
			</div>
		</form>
	}
	else
	{
		<p>Платформа не найдена!</p>
	}
</div>