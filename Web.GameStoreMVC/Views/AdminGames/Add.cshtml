@model Web.GameStoreMVC.Models.ViewModels.AdminGameAddRequest

<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>Добавить новую игру - функционал админа</h1>
	</div>
</div>

<div class="container py-5">
	<form method="post">
		<div class="mb-3">
			<label class="form-label">Название</label>
			<input type="text" class="form-control" id="name" asp-for="Name" />
		</div>

		<div class="mb-3">
			<label class="form-label">Описание</label>
			<textarea class="form-control" id="description" asp-for="Description"></textarea>
		</div>

		<div class="mb-3">
			<label class="form-label">Системные требования</label>
			<input type="text" class="form-control" id="systemRequirements" asp-for="SystemRequirements" />
		</div>

		<div class="mb-3">
			<label class="form-label">Разработчик</label>
			<input type="text" class="form-control" id="developer" asp-for="Developer" />
		</div>

		<div class="mb-3">
			<label class="form-label">Цена</label>
			<input type="number" class="form-control" id="price" asp-for="Price" />
		</div>

		<div class="mb-3">
			<label class="form-label">Год выпуска</label>
			<input type="date" class="form-control" id="yearOfRelease" asp-for="YearOfRelease" />
		</div>

		<div class="mb-3">
			<label class="form-label">Жанры</label>
			<select class="form-select"
					asp-items="@Model.Genres"
					asp-for="SelectedGenres">
			</select>
		</div>

		<div class="mb-3">
			<label class="form-label">Языки</label>
			<select class="form-select"
					asp-items="@Model.Languages"
					asp-for="SelectedLanguages">
			</select>
		</div>

		<div class="mb-3">
			<label class="form-label">Платформы</label>
			<select class="form-select"
					asp-items="@Model.Platforms"
					asp-for="SelectedPlatforms">
			</select>
		</div>

		<div class="mb-3">
			<button type="submit" class="btn btn-dark">Добавить</button>
		</div>
	</form>
</div>