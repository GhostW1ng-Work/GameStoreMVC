@model Web.GameStoreMVC.Models.ViewModels.AdminEditGameRequest

<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>Редактировать игру - функционал админа</h1>
	</div>
</div>

<div class="container py-5">
	@if (Model != null)
	{
		<form method="post">
			<div class="mb-3">
				<label class="form-label">Id</label>
				<input type="text" id="id" class="form-control" asp-for="Id" readonly />
			</div>

			<div class="mb-3">
				<label class="form-label">Название</label>
				<input type="text" id="name" class="form-control" asp-for="Name" />
			</div>

			<div class="mb-3">
				<label class="form-label">Описание</label>
				<input type="text" id="description" class="form-control" asp-for="Description" />
			</div>

			<div class="mb-3">
				<label class="form-label">Разработчик</label>
				<input type="text" id="developer" class="form-control" asp-for="Developer" />
			</div>

			<div class="mb-3">
				<label class="form-label">Системные требования</label>
				<input type="text" id="systemRequirements" class="form-control" asp-for="SystemRequirements" />
			</div>

			<div class="mb-3">
				<label class="form-label">Цена</label>
				<input type="number" id="price" class="form-control" asp-for="Price" />
			</div>

			<div class="mb-3">
				<label class="form-label">Год выпуска</label>
				<input type="date" id="yearOfRelease" class="form-control" asp-for="YearOfRelease" />
			</div>

			<div class="mb-3">
				<label class="form-label">Url картинки</label>
				<input type="text" class="form-control" id="imageUrl" asp-for="ImageUrl" />
			</div>

			<div class="mb-3">
				<label class="form-label">Жанры</label>
				<select class="form-select"
						asp-items="@Model.Genres"
						asp-for="SelectedGenres">
				</select>
			</div>

			<div class="mb-3">
				<label class="form-label">Языки</label>
				<select class="form-select"
						asp-items="@Model.Languages"
						asp-for="SelectedLanguages">
				</select>
			</div>

			<div class="mb-3">
				<label class="form-label">Платформы</label>
				<select class="form-select"
						asp-items="@Model.Platforms"
						asp-for="SelectedPlatforms">
				</select>
			</div>

			<div class="mb-3">
				<button type="submit" class="btn btn-dark">Применить</button>
				<button type="submit" class="btn btn-danger"
						asp-area=""
						asp-controller="AdminGames"
						asp-action="Delete">
					Удалить
				</button>
			</div>
		</form>
	}
	else
	{
		<p>Игра не найдена!</p>
	}
</div>
