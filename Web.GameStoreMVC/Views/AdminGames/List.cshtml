@model List<Web.GameStoreMVC.Models.Domain.Game>

@{
	ViewData["Title"] = "Список игр";
	int nextPage = Convert.ToInt32(ViewBag.PageNumber) + 1;
	int previousPage = Convert.ToInt32(ViewBag.PageNumber) - 1;
}


<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>Список игр</h1>
	</div>
</div>

<div class="container py-5">
	@if (Model != null && Model.Any())
	{
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Название</th>
					<th>Цена</th>
					<th>Год выпуска</th>
					<th>Жанры</th>
					<th>Языки</th>
					<th>Платформы</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var game in Model)
				{
					<tr>
						<td>@game.Id</td>
						<td>@game.Name</td>
						<td>@game.Price руб.</td>
						<td>@game.YearOfRelease</td>
						<td>
							<div>
								@foreach (var genre in game.Genres)
								{
									<span class="badge bg-secondary">@genre.Name</span>
								}
							</div>
						</td>
						<td>
							<div>
								@foreach (var language in game.Languages)
								{
									<span class="badge bg-secondary">@language.Name</span>
								}
							</div>
						</td>
						<td>
							<div>
								@foreach (var platform in game.Platforms)
								{
									<span class="badge bg-secondary">@platform.Name</span>
								}
							</div>
						</td>
						<td>
							<a asp-area=""
							   asp-controller="AdminGames"
							   asp-action="Edit"
							   asp-route-id="@game.Id"
							   class="btn btn-dark">
								Редактировать
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

		<nav aria-label="Page navigation">
			<ul class="pagination">
				<li class="page-item">
					<a class="page-link"
					   asp-controller="AdminGames"
					   asp-action="List"
					   asp-route-pageNumber="@previousPage">Предыдущая</a>
				</li>

				@for (int i = 1; i <= ViewBag.TotalPages; i++)
				{
					<li class="page-item">
						<a class="page-link"
						   asp-controller="AdminGames"
						   asp-action="List"
						   asp-route-pageNumber="@i"
						   asp-route-pageSize="@ViewBag.PageSize">@i</a>
					</li>
				}

				<li class="page-item">
					<a class="page-link"
					   asp-controller="AdminGames"
					   asp-action="List"
					   asp-route-pageNumber="@nextPage">Следующая</a>
				</li>
			</ul>
		</nav>
	}
	else
	{
		<p>Игр не найдено!</p>
	}
</div>
